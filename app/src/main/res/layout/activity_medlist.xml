<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cnm.bootcamp.david.medmanager.activities.MedListActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/list_bg">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="514dp"
        android:layout_height="60dp"
        android:text="Medication Adjustment"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp" />


    <Button
        android:id="@+id/databaseButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/database"
        android:visibility="visible"
        android:layout_marginEnd="15dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonschedadjust"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/buttonAdjustMed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:enabled="false"
        android:layout_marginTop="3dp"
        android:text="@string/buttonAdjMed"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddNew"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/buttonDeleteMed"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteMed"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/buttonschedadjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonAdjSched"
        android:layout_marginEnd="15dp"
        android:enabled="false"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonAddNew"
        android:layout_width="134dp"
        android:layout_height="72dp"
        android:text="Add New Med"
        android:layout_marginStart="5dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:id="@+id/buttonDeleteMed"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="3dp"
        android:text="@string/delete_med"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/buttonAddNew"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="1.0" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAdjustMed"
        android:layout_marginEnd="45dp"
        app:layout_constraintRight_toRightOf="@+id/databaseButton"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toTopOf="@+id/buttonDeleteMed"
        app:layout_constraintLeft_toRightOf="@+id/buttonAdjustMed" />

    <ListView
        android:id="@+id/queryList"
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:layout_marginTop="199dp"

        android:choiceMode="singleChoice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
